{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": false,
      "typeRoots": ["./src/types"]
    },
    "include": ["src/**/*", "src/index.ts"],
    "exclude": ["node_modules"]
  }